<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include ('./partials/head.ejs') %>
  </head>
  <body>
    <%- include ('./partials/navbar.ejs') %>

    <div class="container justify-content-center fav-show-page">
      <div class="card m-3">
        <div class="d-flex justify-content-center m-3">
          <img src="<%=fav.trailImage%>" alt="" width="80%">
        </div>
        <div class="m-5">

          <form class="form-group" action="/favorites/<%=fav._id%>?_method=PUT" method="post">
            <h4>Name: <%=fav.trailName%></h4>
            <h4>Description: </h4>
            <textarea class="form-control" name="description" rows="8" cols="80"><%=fav.description%></textarea>
            <h4>Miles: <input class="form-control" type="text" name="length" value="<%=fav.length%>"></h4>
            <h4>Difficulty:
              <div class="stars">
                <a class="star-style">⭐</a>
                <a class="star-style">⭐</a>
                <a class="star-style">⭐</a>
                <a class="star-style">⭐</a>
                <a class="star-style">⭐</a>
            </div>
          </h4>
            <h4>Quality:
              <div class="stars-quantity">
              <a class="star-style-quantity">⭐</a>
              <a class="star-style-quantity">⭐</a>
              <a class="star-style-quantity">⭐</a>
              <a class="star-style-quantity">⭐</a>
              <a class="star-style-quantity">⭐</a>
            </div>
          </h4>
            <input class="btn btn-info" type="submit" value="Submit Edits">
          </form>
        </div>
      </div>
      <%- include ('./partials/footer.ejs') %>
      <script src="./app.js"></script>
  </body>
</html>
