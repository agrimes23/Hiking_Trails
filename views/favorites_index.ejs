<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <%- include ('./partials/head.ejs') %>
</head>

<body>
  <%- include ('./partials/navbar.ejs') %>
  <div class="container">


    <div class="jumbotron">
      <h1 class="p-3">Favorite Trails</h1>
    </div>

    <%# <form class="" action="index.html" method="post">
  <button type="button" name="button"></button>
</form> %>
<div class="container row d-flex justify-content-around">
<% for (let i=0; i<favs.length; i++) { %>

        <a href="/favorites/<%= favs[i]._id %>" class="btn column m-3 col-lg-3 col-md-6">
          <div class="card hiking-card p-3 d-flex h-350 justify-content-center " style="width: 15rem; height: 22rem; background-image: linear-gradient(to bottom right, #D9CAB3, #CFB997); border-radius: 10%;">
            <img class="card-img-top hover-shadow" src="<%=favs[i].trailImage%>" alt="Card image cap">
            <div class="card-body d-flex flex-column text-white justify-content-center">
              <h5 class="card-title"><%=favs[i].trailName%></h5>
              <p class="card-text"><%=favs[i].difficulty%></p>
              <form class="" action="/favorites/<%=favs[i]._id%>?_method=DELETE" method="post">
                <button class="btn btn-info" type="submit" name="button">Remove from Favs</button>
              </form>
            </div>

          </div>
        </a>


<% } %>
</div>
 <% if (favs.length === 0) { %>
   <div class="d-flex justify-content-center">
     <h3>You have nothing favorited yet</h3>
   </div>
   <div class="d-flex justify-content-center">
     <form class="m-4" action="/">
       <button class="btn btn-info p-3" type="submit" name="button">Browse Trails</button>
     </form>
   </div>
 <% } %>




  </div>

</body>

</html>
